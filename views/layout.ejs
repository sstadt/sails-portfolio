<!DOCTYPE html>
<html class="<%= title.toLowerCase() %>">
  <head>
    <title><%= sails.config.globals.site.title %> | <%= title %></title>

    <!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!--STYLES-->
    <link rel="stylesheet" href="/styles/importer.css">
    <!--STYLES END-->
  </head>

  <body>
    <%- body %>

    <!--TEMPLATES-->
    
    <!--TEMPLATES END-->

    <% if (sails.config.environment === 'development' && typeof script === 'string') { %>
      <script src="/js/vendor/requirejs/require.js" data-main="/js/<%= script %>-app.js"></script>
    <% } %>

    <% if (sails.config.environment === 'production' && typeof script === 'string') { %>
      <script src="/js/vendor/requirejs/require.js" data-main="/js-build/app/<%= script %>.js"></script>
    <% } %>

    <!--SCRIPTS-->
    
    <!--SCRIPTS END-->
    
    <!-- Analytics -->
    <script src="http://www.google-analytics.com/ga.js" async="" type="text/javascript"></script>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-36862310-1']);
      _gaq.push(['_trackPageview']);
      
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </body>
</html>
